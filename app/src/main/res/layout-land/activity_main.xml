<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="40dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:theme="@style/Theme.AppCompat.Light"
            android:translationZ="9000dp"/>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:visibility="visible">


        <LinearLayout
            android:padding="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="5dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight=".5"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:paddingLeft="0dp"
                    android:paddingRight="2dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Hostname"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/editTextHostname"
                        style="@style/Widget.AppCompat.AutoCompleteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="#000000"
                        android:textColorHint="#AAAAAA"
                        android:textIsSelectable="true"
                        android:textSize="24dp" />

                    <Button
                        android:id="@+id/btnConnect"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Connect"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:paddingLeft="2dp"
                    android:paddingRight="0dp"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Custom Commands"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/editTextCommand"
                        style="Widget.AppCompat.AutoCompleteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="#000000"
                        android:textIsSelectable="true"
                        android:textSize="24dp" />

                    <Button
                        android:id="@+id/btnSendCommand"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Send"
                        android:textSize="20dp"
                        tools:ignore="OnClick" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:clickable="false"
                    app:checkedChip="@id/btnBD"
                    app:chipSpacingHorizontal="30dp"
                    app:chipSpacingVertical="4dp"
                    app:selectionRequired="true"
                    app:singleSelection="true">


                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnBD"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="BD" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnDVD"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="DVD" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnSat"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="SAT/CBL" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnHDMI"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HMDI "
                        app:chipIcon="@android:drawable/ic_menu_rotate"
                        app:chipIconEnabled="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btniPod"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="iPod/USB"
                        android:textSize="20dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnBT"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BT"
                        android:textSize="20dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnMHL"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MHL"
                        android:textSize="20dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnSpotify"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spotify"
                        android:textSize="20dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnNet"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internet Radio"
                        android:textSize="20dp"
                        app:chipIcon="@android:drawable/ic_menu_rotate"
                        app:chipIconVisible="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnTuner"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuner"
                        android:textSize="20dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnTV"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TV" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnCD"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="CD" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnCyclic"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="All"
                        app:checkedIconEnabled="false"
                        app:chipIcon="@android:drawable/ic_menu_rotate"
                        app:chipIconEnabled="true" />

                </com.google.android.material.chip.ChipGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <ToggleButton
                        android:id="@+id/toggleButtonPower"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:checked="true"
                        android:text="ToggleButton"
                        android:textOff="Power off"
                        android:textOn="Power On"
                        android:textSize="24dp" />

                    <ToggleButton
                        android:id="@+id/btnMute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="ToggleButton"
                        android:textOff="Mute Off"
                        android:textOn="Mute On"
                        android:textSize="24dp" />


                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBarVolume"
                    style="@android:style/Widget.SeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="185"
                    android:rotation="0" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/borders"
                android:fillViewport="true"
                android:isScrollContainer="true"
                android:nestedScrollingEnabled="true"
                android:overScrollMode="ifContentScrolls"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                android:textAlignment="center"
                android:textDirection="ltr">

                <TextView
                    android:id="@+id/txtboxResponse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:duplicateParentState="false"
                    android:ems="10"
                    android:enabled="true"
                    android:fadeScrollbars="false"
                    android:fontFamily="@font/courier_prime"
                    android:gravity="bottom"
                    android:isScrollContainer="false"
                    android:lines="5"
                    android:maxLines="5"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="always"
                    android:scrollIndicators="right"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarFadeDuration="1000"
                    android:scrollbarSize="6dp"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:selectAllOnFocus="false"
                    android:text="Response:"
                    android:textAlignment="gravity"
                    android:textColor="#FFFFFF"
                    android:textIsSelectable="true"
                    android:textSize="18sp"
                    android:verticalScrollbarPosition="right" />
            </ScrollView>

        </LinearLayout>

    </FrameLayout>
</androidx.drawerlayout.widget.DrawerLayout>